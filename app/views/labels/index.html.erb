<p id="notice"><%= notice %></p>

<h1>Labels一覧</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>ラベル名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @labels.each do |label| %>
      <tr>
        <td><%= label.name %></td>
        <td><%= link_to '詳細', label , class: 'btn btn-primary'%></td>
        <td><%= link_to '編集', edit_label_path(label),
        data: { confirm: '本当に編集していいですか？' }, class: 'btn btn-success' %></td>
        <td><%= link_to '削除', labels_path, method: :delete,
        data: { confirm: '本当に削除していいですか？' }  , class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

